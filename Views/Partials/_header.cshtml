@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage

<header class="headerContainer">
    <div class="container">
        <div class="critoLogo"><img src="images/logotype.svg" alt="" /></div>
        <div class="navbar">
            <div class="upperNav">
                <div class="adress">
                    <h1>
                        <span class="material-symbols-outlined"> phone_in_talk </span>+46 (8) 121 470 50
                    </h1>
                    <h1 class="info">
                        <span class="material-symbols-outlined">
                            mark_email_unread
                        </span>info@crito.com
                    </h1>
                    <h1>
                        <span class="material-symbols-outlined"> location_on </span>Sveavägen 31, 111 34 STOCKHOLM
                    </h1>
                </div>
                <div class="iconsLink">
                    <i class="bi bi-facebook"></i>
                    <i class="bi bi-twitter"></i>
                    <i class="bi bi-instagram"></i>
                    <i class="bi bi-linkedin"></i>
                </div>
            </div>
                @{
                var selection = Umbraco.ContentAtRoot().FirstOrDefault()
                    .Children()
                    .Where(x => x.IsVisible());
                }
            <div class="lowerNav">
                <div class="navbarContainer">
                    @foreach (var item in selection)
                    {
                        <h1><a href="@item.Url()">@item.Name</a></h1>
                    }
                </div>
                <div class="loginBtn">
                    <h1>Login <i class="bi bi-arrow-up-right"></i></h1>
                </div>
            </div>
        </div>
    </div>
</header>